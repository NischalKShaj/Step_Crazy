<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Step-Crazy/wallet</title>
    <link rel="stylesheet" href="../../CSS/user/orderDetails.css">
    <link rel="stylesheet" href="../../CSS/user/orderHistroy.css">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
  </head>
  <body>
    <!-- navbar for the wallet page -->
    <nav class="navbar navbar-expand-lg navbar-light shadow">
      <div class="container d-flex justify-content-between align-items-center">
       
        <a href="/">
          <img src="../../Img/login/logo.png" alt="logo" class="img-fluid w-50"
        /></a>
        <button
          class="navbar-toggler border-0"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#templatemo_main_nav"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div
          class="align-self-center collapse navbar-collapse flex-fill d-lg-flex justify-content-lg-between"
          id="templatemo_main_nav"
        >
          <div class="flex-fill">
            <ul
              class="nav navbar-nav d-flex justify-content-between mx-lg-auto"
            >
              <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/about">About</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/product">Product</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/contact">Contact</a>
              </li>
            </ul>
          </div>
          <div class="navbar align-self-center d-flex">
            <div
              class="d-lg-none flex-sm-fill mt-3 mb-4 col-7 col-sm-auto pr-3"
            >
              <div class="input-group">
                <input
                  type="text"
                  class="form-control"
                  id="inputMobileSearch"
                  placeholder="Search ..."
                />
                <div class="input-group-text">
                  <i class="fa fa-fw fa-search"></i>
                </div>
              </div>
            </div>
            <a
              class="nav-icon d-none d-lg-inline"
              href="#"
              data-bs-toggle="modal"
              data-bs-target="#templatemo_search"
            >
              <i class="fa fa-fw fa-search text-dark mr-2"></i>
            </a>
          </div>
        </div>
      </div>
    </nav>
    
    <!-- section for the wallet page  -->
    <section class="gradient-custom" style="margin-bottom: 50px;">
      

      
        <div class="row">
          <div class="col-lg-4">
            <div class="card mb-4 mx-2 mt-1">
              <div class="card-body text-center">
                <img
                  src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp"
                  alt="avatar"
                  class="rounded-circle img-fluid"
                  style="width: 150px"
                />
                <h5 class="my-3"><%= user.first_name %></h5>
                <p class="text-muted mb-1">Full Stack Developer</p>
                
                
              </div>
            </div>
            
          </div>
        </div>
      
    </section>
          
          <div class="col-lg-8">
            <div class="col-md-6">
              <div class="card mx-2 mb-4 mb-md-0 bg-primary">
                <div class="card-body">
                  <h3 class="mb-4">
                    <span class="text-light font-italic me-1">Wallet</span>
                    
                  </h3>
                  <h4 class="text-muted">Available Balance:-</h4>
                  <h4>&#8377 <%= user.wallet %></h4>
                  
                </div>
              </div>
                </div>
              </div>
            
            <br>
            <!-- wallet payment history -->
            
            <section class="h-100  gradient-custom">
              <div class="container" style="margin-top: -500px; color: #f69fdf;" >
                <div class="row  justify-content-end align-items-center h-100">
                  <div class="col-lg-10 col-xl-8">
                    <div class="card" style="border-radius: 10px">
                      <div class="card-header px-4 py-5">
                        <h5 class="text-muted mb-0">
                          Order History
                         
                        </h5>
                      </div>
                      <div class="card-body p-6">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                          <p class="lead fw-normal mb-0" style="color: #a8729a">Receipt</p>
                        </div>
            
                        <% if (orderDetail.length > 0) { %>
                          <ul>
                            <% for (let i = 0; i < orderDetail.length; i++) { %>
                              <li>
                                <div class="card shadow-0 border mb-4">
                                  <div class="card-body">
                                    <div class="row">
                                      <% const products = orderDetail[i]; %>
                                      <% for (let j = 0; j < products.length; j++) { %>
                                        <div class="col-md-2">
                                          <!-- Display product image -->
                                          <img src="<%= products[j].image[0] %>" class="img-fluid" alt="<%= products[j].name %>" style="height: 120px; width: 150px;">
                                        </div>
                                        <div class="col-md-2 text-center d-flex justify-content-between align-items-center">
                                          <!-- Display product name -->
                                          <p class="text-muted mb-0"><%= products[j].name %></p>
                                        </div>
                                        <div class="col-md-2 text-center d-flex justify-content-between align-items-center">
                                          <!-- Display quantity -->
                                          <p class="text-muted mb-0 small">Quantity: <%= order[i].quantity[j] %></p>
                                        </div>
                                        <div class="col-md-2 text-center d-flex justify-content-between align-items-center">
                                          <!-- Display price -->
                                          <p class="text-muted mb-0 small">Price: &#8377 <%= products[j].price %></p>
                                        </div>
                                      <% } %>
                                    </div>
                                  </div>
                                </div>
                              </li>
                            <% } %>
                          </ul>
                        <% } %>
                        
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </section>
            
            
            
          
            
          
            
          
             
            
        

        
  </body>
</html>
