    <section class="h-100 gradient-custom">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-lg-10 col-xl-8">
            <div class="card" style="border-radius: 10px">
              <div class="card-header px-4 py-5">
                <h5 class="text-muted mb-0">
                  Order history
                  
                </h5>
              </div>
              <div class="card-body p-4">
                <div
                  class="d-flex justify-content-between align-items-center mb-4"
                >
                  <p class="lead fw-normal mb-0" style="color: #a8729a">
                    Receipt
                  </p>
                  
                </div>
                
                <% if (orders.length > 0) { %>
                  <ul>
                    <% orders.forEach(order => { %>
                      <li>
                        <strong>Order ID:</strong> <%= order._id %><br>
                        <strong>Order Date:</strong> <%= order.date %><br>
                
                        <% if (order.cart && order.cart.length > 0) { %>
                          <ul>
                            <% order.cart.forEach(cartItem => { %>
                              <li>
                                <% if (cartItem.product) { %>
                                  <strong>Product Name:</strong> <%= cartItem.product.name %><br>
                                  <strong>Quantity:</strong> <%= cartItem.quantity %><br>
                                  <strong>Price:</strong> <%= cartItem.product.price %><br>
                                <% } else { %>
                                  <p>Product details not available</p>
                                <% } %>
                              </li>
                            <% }); %>
                          </ul>
                        <% } else { %>
                          <p>No items in the cart</p>
                        <% } %>
                      </li>
                    <% }); %>
                  </ul>
                <% } else { %>
                  <p>No orders found.</p>
                <% } %>
                
                
                
                
                
          
                
                
                
              
              
              
                 
                        
                 
