<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Step-Crazy/Invoice</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5; /* Background color for the "paper" */
        padding: 150px;
        padding-top: 50px;
      }

      .card {
        background-color: #fff; /* Background color for the "card" */
        border-radius: 5px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.2); /* Box shadow for the "card" */
        padding: 20px;
        margin: 0 auto;
        max-width: 1500px;
      }

      /* Add more styles for your specific elements if needed */
    </style>
  </head>
  <body>
    <div
      class="card"
      style="
        width: 100%;
        margin: 0;
        box-shadow: none;
        border: none;
        page-break-before: always;
      "
    >
      <div class="card-body">
        <div class="container mb-5 mt-3">
          <div class="container">
            <h2 class="text-center">Invoice</h2>
            <div class="col-md-12">
              <div class="text-center">
                <img src="../Img/login/logo.png" alt="" style="height: 100px" />
              </div>
            </div>
            
             
              <div class="row">
             
              <div class="col-xl-8">
                <ul class="list-unstyled">
                  <li class="text-muted">
                    To: <span style="color: #8f8061"><%= invoiceDetails.first_name  %> <%= invoiceDetails.last_name %></span>
                  </li>
                  <li class="text-muted" style="white-space: pre-line; line-height: 0.5;">
                    <% invoiceDetails.order[0].selectedAddress.forEach(function(line) { %>
                      <%= line %><br>
                    <% }); %>
                  </li>

                  <li class="text-muted">
                    <i class="fas fa-phone"></i> <%= invoiceDetails.phone %>
                  </li>
                </ul>
              </div>
              <div class="col-xl-4">
                <p class="text-muted">Invoice</p>
                <ul class="list-unstyled">
                  <li class="text-muted">
                    <i class="fas fa-circle" style="color: #8f8061"></i>
                    <span class="fw-bold">ID:</span><%= invoiceDetails.order[0]._id %>
                  </li>
                  <li class="text-muted">
                    <i class="fas fa-circle" style="color: #8f8061"></i>
                    <span class="fw-bold">Creation Date: </span><%= invoiceDetails.order[0].date.toLocaleDateString() %>
                  </li>
                </ul>
              </div>
            </div>
            <% invoiceDetails.order[0].products.forEach((productDetails) => { %>
            <div class="row my-2 mx-1 justify-content-center">
              <div class="col-md-2 mb-4 mb-md-0">
                <div class="card">
                  <img
                    src="https://mdbcdn.b-cdn.net/img/Photos/Horizontal/E-commerce/new/img(4).webp"
                    class="card-img-top"
                    alt="Elegant shoes and shirt"
                  />
                 
                   
                  
                  <div class="card-body">
                    <% console.log("product",productDetails) %>
                    <h5 class="card-title"><%= productDetails.name %></h5>
                    <p class="card-text">Size: 8.5</p>
                    <p class="card-text">Color: Gray</p>
                  </div>
                  <% }) %>
                  <div class="card-footer">
                    <s class="text-muted me-2 small align-middle">$1500</s
                    ><span class="align-middle">$1050</span>
                  </div>
                </div>
              </div>
              <div class="col-md-7 mb-4 mb-md-0">
                <p class="fw-bold">Custom suit</p>
                <p class="mb-1">
                  <span class="text-muted me-2">Size:</span><span>8.5</span>
                </p>
                <p>
                  <span class="text-muted me-2">Color:</span><span>Gray</span>
                </p>
              </div>
              <div class="col-md-3 mb-4 mb-md-0">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">
                      <s class="text-muted me-2 small align-middle">$1500</s
                      ><span class="align-middle">$1050</span>
                    </h5>
                    <p class="text-danger"><small>You save 25%</small></p>
                  </div>
                </div>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-xl-8">
                <p class="ms-3">Add additional notes and payment information</p>
              </div>
              <div class="col-xl-3">
                <ul class="list-unstyled">
                  <li class="text-muted ms-3">
                    <span class="text-black me-4">SubTotal</span>$1050
                  </li>
                  <li class="text-muted ms-3 mt-2">
                    <span class="text-black me-4">Shipping</span>$15
                  </li>
                </ul>
                <p class="text-black float-start">
                  <span class="text-black me-3"> Total Amount</span
                  ><span style="font-size: 25px">$1065</span>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
   
  </body>
</html>
