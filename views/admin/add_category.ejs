            <div class="col-lg-12 mx-auto mt-4" >
                <div class="card shadow">
                    <div class="card-header bg-danger">
                        <a href="/admin/dashboard/category" style="text-decoration: none; font-size: 20px; color: #333; margin-right: 10px;">&#10006;</a>

                        <h3 class="text-light">Add Category</h3>
                    </div>
                    <div class="card-body p-4">
                        <form action="/admin/dashboard/category" method="post" id="add-form" onsubmit="return validateForm()">
                            
                            <div class="form-outline mb-2">
                                <label  for="category">Category Name</label>
                                <input  type="text" name="category" id="categoryInput">
                                

                            </div>
                            
                            <button type="submit" class="btn btn-primary">
                                Add category
                            </button></a>
